@model MovieFlow.Modules.Emails.Application.Users.ChangePassword.Models.ChangePasswordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hasło zostało zmienione</title>
</head>
<body>
<div style="max-width: 600px; margin: 2rem auto; background-color: #fefefe; padding: 1rem; text-align: center; border: 1px solid #086AD8; border-radius: 24px;">
    <p>Poniżej znajdziesz potwierdzenie zmiany hasła:</p>
    <div style="margin: 1rem auto; position: relative; width: 50%; min-width: 240px; background-color: #ffffff; padding: 1rem; border: 2px solid #086AD8; border-radius: 20px;">
        <div style="position: absolute; top: -0.75rem; font-weight: 600; background-color: inherit; color: #086AD8;">Data i godzina zmiany hasła:</div>
        <div style="color: #086AD8; text-align: center; font-size: larger; font-weight: 600;">@Model.ChangedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
    </div>
    <p>Jeśli nie dokonałeś(aś) tej zmiany, prosimy o jak najszybszy kontakt z administratorem.</p>
</div>
</body>
</html>
